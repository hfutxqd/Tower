<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bind_fragment_icon"
        android:layout_width="match_parent"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        style="@style/CustomWel_TextContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bind_fragment_title"
            style="?attr/welcomeLargeTextStyle"
            android:text="@string/bind_fragment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/bind_fragment_text"
            android:text="@string/bind_fragment_text_default"
            style="?attr/welcomeNormalTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>