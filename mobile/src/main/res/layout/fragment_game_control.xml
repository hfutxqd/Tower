<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    tools:context="xyz.imxqd.ta.ui.fragments.GameControlFragment">

    <TextView
        android:text="æˆ‘"
        android:id="@+id/game_tv_status"
        android:textColor="@color/black_full"
        android:textSize="12sp"
        android:padding="4dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/game_iv_status_icon"
        android:src="@drawable/stone_black"
        android:layout_width="24dp"
        android:layout_height="24dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/game_btn_undo"
            android:text="@string/game_control_undo"
            android:textColor="@color/white_full"
            android:src="@drawable/ic_undo_white_36dp"
            android:background="@color/blue_500"
            android:scaleType="fitCenter"
            android:layout_margin="16dp"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="54dp" />
        <Button
            android:id="@+id/game_btn_restart"
            android:text="@string/game_control_restart"
            android:textColor="@color/white_full"
            android:src="@drawable/ic_restart_white_36dp"
            android:background="@color/blue_500"
            android:scaleType="fitCenter"
            android:layout_margin="16dp"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="54dp" />
    </LinearLayout>
</LinearLayout>